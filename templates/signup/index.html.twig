{% extends 'base.html.twig' %}

{% block title %}Sign Up{% endblock %}

{% block body %}
    <!-- Background video -->
    <video autoplay muted loop class="position-fixed w-100 h-100" style="z-index: -1; object-fit: cover;">
    <source src="{{ asset('Newback.mp4') }}" type="video/mp4">
    Your browser does not support the video tag.
</video>

    <!-- Signup Form -->
    <div class="d-flex justify-content-center align-items-center vh-100 signup-wrapper">
        <div class="card p-4 bg-dark bg-opacity-75 text-white form-container shadow-lg rounded-3">
            <h2 class="text-center mb-4">Sign Up</h2>

            {% if error is defined %}
                <div class="alert alert-danger" role="alert">
                    {{ error }}
                </div>
            {% endif %}

            <form action="{{ path('app_signup') }}" method="post">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" id="email" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="name" class="form-label">Username</label>
                    <input type="text" name="name" id="name" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" id="password" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-primary w-100">Sign Up</button>
                <p class="text-center mt-3">Already have an account? </a></p>
            </form>
        </div>
    </div>
{% endblock %}
