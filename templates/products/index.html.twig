<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products Page</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome (optional for icons) -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background-color: #1c1c1c; /* Page background */
            color: #fff; /* Text color for contrast */
        }

        .filters-section {
            background-color: #1c1c1c; /* Filter section background */
            color: #fff;
            padding: 20px;
            border-radius: 10px;
        }

        /* Ensuring the gap between cards is applied */
.row.g-4 {
    display: flex;
    flex-wrap: wrap;
    gap: 15px;  /* Decreased gap to fit the smaller cards */
}

/* Adjusting card size and spacing */
.product-card {
    background-color: #2d2d2d; /* Card background color */
    color: #fff;
    border-radius: 15px;
    padding: 10px;  /* Reduced padding to make cards smaller */
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    height: auto; /* Adjust height dynamically */
}

/* Hover effect */
.product-card:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 10px rgba(255, 255, 255, 0.2);
}
.cart-icon {
    font-size: 2rem;  /* Adjust the size as needed */
}


/* Card image styling */
.card-img-top {
    border-radius: 10px;
    height: 150px;  /* Limit image size to make the card smaller */
    object-fit: cover;  /* Ensure the image covers the space without distortion */
}

/* Ensuring card text looks appropriate */
.card-body {
    padding: 10px;
}

.card-title {
    font-size: 1rem;  /* Reduce title font size */
}

.card-text {
    font-size: 0.85rem;  /* Reduce description text font size */
}

/* Optional: Make the layout responsive */
@media (max-width: 768px) {
    .col-md-3 {
        flex: 1 1 calc(50% - 10px); /* Adjust layout for tablets */
    }
}

@media (max-width: 576px) {
    .col-md-3 {
        flex: 1 1 100%; /* Cards take full width on mobile */
    }
}
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        img {
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <!-- Navbar Section -->
    <header class="position-relative" style="background-image: url('https://images.pexels.com/photos/276528/pexels-photo-276528.jpeg?cs=srgb&dl=pexels-pixabay-276528.jpg&fm=jpg'); background-size: cover; height: 50vh;">
        <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
        <nav class="navbar navbar-dark container-fluid px-4 pt-3">
            <div class="d-flex align-items-center">
                <img src="/Logo.png" alt="Furniture Mania Logo" style="height: 80px; margin-right: 10px;">
                <h1 class="navbar-brand mb-0"></h1>
            </div>
            <div class="position-fixed top-0 start-50 translate-middle-x" style="z-index: 1030;">
                <ul class="nav nav-pills rounded-pill p-3 justify-content-center" style="background-color: rgb(46, 48, 51);">
                    <li class="nav-item"><a class="nav-link text-white active" style="background-color: rgba(255, 255, 255, 0.15)" href="{{ path('app_home') }}">Home</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="{{ path('app_products') }}">Products</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="#">Pages</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="#">Contact Us</a></li>
                </ul>
            </div>

          <div style="position: relative; display: inline-block;">
    <i class="bi bi-cart" style="font-size: 2rem;">
        <span id="cart-badge" class="badge bg-danger" style="position: absolute; top: -10px; right: -10px; font-size: 0.8rem; padding: 0.2rem 0.5rem;">0</span>
    </i> 
</div>


        </nav>
        <div class="position-absolute top-50 start-50 translate-middle text-center text-white">
            <h1 class="display-3 font-weight-bold">All Products</h1>
        </div>
    </header>

    <!-- Main Body -->
    <main class="container my-5">
        <div class="row">
            <!-- Filters Section -->
            <div class="col-md-3">
                <div class="filters-section">
                    <h5>Filters</h5>
                    <form id="filters-form">
                        <div class="mb-3">
                            <label for="category" class="form-label">Category</label>
                            <select id="category" class="form-select bg-black text-white">
                                <option value="all">All</option>
                                {% for category in categories %}
                                    <option value="{{ category }}">{{ category }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="priceRange" class="form-label">Price Range</label>
                            <input type="range" class="form-range" id="priceRange" min="0" max="1000" step="50">
                            <span id="priceValue">500</span>
                        </div>
                        <button type="button" class="btn btn-primary w-100" id="applyFilters">Apply Filters</button>
                    </form>
                </div>
            </div>

            <!-- Product Cards -->
            <div class="col-md-9">
    <div class="row g-4" id="product-list">
        {% for product in products %}
            <div class="col-md-3 mb-4 product-card" 
     data-category="{{ product.categories|join(', ') }}" 
     data-price="{{ product.price }}">
    <div class="card">
        <img src="{{ product.imgURL }}" class="card-img-top" alt="{{ product.name }}">
        <div class="card-body">
            <h5 class="card-title">{{ product.name }}</h5>
            <p class="card-text">{{ product.description }}</p>
            <p class="card-text">Price: ${{ product.price }}</p>
            <p class="card-text">Category: {{ product.categories|join(', ') }}</p>
            <button class="btn btn-sm btn-primary add-to-cart">Add to Cart</button> <!-- Add to Cart button -->
        </div>
    </div>
</div>
        {% endfor %}
    </div>
</div>

        </div>
    </main>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const categoryFilter = document.querySelector('#category');
            const priceFilter = document.querySelector('#priceRange');
            const priceValue = document.querySelector('#priceValue');
            const applyFiltersButton = document.querySelector('#applyFilters');
            const productList = document.querySelectorAll('.product-card');

            priceFilter.addEventListener('input', () => {
                priceValue.textContent = priceFilter.value;
            });

            applyFiltersButton.addEventListener('click', () => {
                const selectedCategory = categoryFilter.value.toLowerCase();
                const maxPrice = parseFloat(priceFilter.value);

                productList.forEach(product => {
                    const productCategory = product.getAttribute('data-category').toLowerCase();
                    const productPrice = parseFloat(product.getAttribute('data-price'));

                    if (
                        (selectedCategory === 'all' || productCategory.includes(selectedCategory)) &&
                        productPrice <= maxPrice
                    ) {
                        product.style.display = 'block';
                    } else {
                        product.style.display = 'none';
                    }
                });
            });
        });


        document.addEventListener('DOMContentLoaded', () => {
    // Select all add to cart buttons
    const addToCartButtons = document.querySelectorAll('.add-to-cart');
    // Select the cart badge
    const cartBadge = document.getElementById('cart-badge');

    // Initialize cart count
    let cartCount = parseInt(cartBadge.textContent) || 0;

    // Update badge count
    function updateCartBadge() {
        cartBadge.textContent = cartCount;
    }

    // Add event listener to each "Add to Cart" button
    addToCartButtons.forEach(button => {
        button.addEventListener('click', () => {
            cartCount++; // Increment the cart count
            updateCartBadge(); // Update the badge with the new count
        });
    });
});

    </script>
</body>
</html>
