<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products Page</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #1c1c1c; /* Set entire page background to dark gray */
            color: #fff; /* White text for contrast */
        }

        .filters-section {
            background-color: #1c1c1c; /* Same as the body background */
            color: #fff;
            padding: 20px;
            border-radius: 10px;
        }

        .product-card {
            background-color: #2d2d2d; /* Same as the body background */
            color: #fff;
            border: none;
            border-radius: 10px;
            padding: 15px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .product-card:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 10px rgba(255, 255, 255, 0.2);
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        img {
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <header class="position-relative" style="background-image: url('https://images.pexels.com/photos/276528/pexels-photo-276528.jpeg?cs=srgb&dl=pexels-pixabay-276528.jpg&fm=jpg'); background-size: cover; height: 50vh;">
        <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
        <nav class="navbar navbar-dark container-fluid px-4 pt-3">
            <div class="d-flex align-items-center">
                <img src="/Logo.png" alt="Furniture Mania Logo" style="height: 80px; margin-right: 10px;">
                <h1 class="navbar-brand mb-0"></h1>
            </div>
            <div class="position-fixed top-0 start-50 translate-middle-x" style="z-index: 1030;">
                <ul class="nav nav-pills rounded-pill p-3 justify-content-center" style="background-color: rgb(46, 48, 51);">
                    <li class="nav-item">
                        <a class="nav-link text-white active" style="background-color: rgba(255, 255, 255, 0.15)" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">Pages</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">Contact Us</a>
                    </li>
                </ul>
            </div>
            <div></div>
        </nav>
        <div class="position-absolute top-50 start-50 translate-middle text-center text-white">
            <h1 class="display-3 font-weight-bold">All Products</h1>
            <p class="lead mt-3"></p>
        </div>
    </header>

    <!-- Main Body -->
    <main class="container my-5">
        <div class="row">
            <!-- Left: Control Center -->
            <div class="col-md-3">
                <div class="filters-section">
                    <h5>Filters</h5>
                    <form>
                        <div class="mb-3">
                            <label for="category" class="form-label">Category</label>
                            <select id="category" class="form-select bg-black text-white">
                                <option value="all">All</option>
                                <option value="furniture">Furniture</option>
                                <option value="decor">Decor</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="priceRange" class="form-label">Price Range</label>
                            <input type="range" class="form-range" id="priceRange" min="0" max="1000" step="50">
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Apply Filters</button>
                    </form>
                </div>
            </div>

            <!-- Right: Product Cards -->
            <div class="col-md-9">
                <!-- Layout and Sort Filters -->
                <div class="d-flex justify-content-between mb-4">
                    <!-- Items per Page Selector -->
                    <div>
                        <label for="items-per-page" class="form-label">Items per page:</label>
                        <select id="items-per-page" class="form-select d-inline-block w-auto bg-black text-white">
                            <option value="12">12</option>
                            <option value="24">24</option>
                            <option value="36">36</option>
                        </select>
                    </div>
                    <!-- Sort by Selector -->
                    <div>
                        <label for="sort-by" class="form-label">Sort by:</label>
                        <select id="sort-by" class="form-select d-inline-block w-auto bg-black text-white">
                            <option value="price">Price</option>
                            <option value="alphabet">Alphabet</option>
                        </select>
                    </div>
                </div>

                <!-- Product Cards Grid -->
                <div class="row g-4">
                    <!-- Example Product Card -->
                    <div class="col-md-4">
                        <div class="product-card">
                            <img src="https://via.placeholder.com/150" alt="Product Image" class="img-fluid mb-3">
                            <h5>Product Name</h5>
                            <p class="text-muted">Category</p>
                            <p class="text-danger">$100</p>
                            <button class="btn btn-sm btn-primary">Add to Cart</button>
                        </div>
                    </div>
                    <!-- Repeat Product Cards as needed -->
                </div>
            </div>
        </div>
    </main>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
