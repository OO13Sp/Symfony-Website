<!-- Additional CSS for Circle, Hover Effect, and Transition -->
<style>
    .arrow-circle {
        width: 25px; /* Circle width */
        height: 25px; /* Circle height */
        border-radius: 50%; /* Make the span circular */
        background-color:rgb(46 48 51) ; /* Initial circle color */
        transition: background-color 2s ease, transform 0.01s ease; /* Smooth color and movement transition */
    }

    .arrow-circle i {
        font-size: 15px; /* Arrow size */
        color: white; /* Initial arrow color */
    }

    .btn:hover .arrow-circle {
        background-color: white; /* Circle turns white on hover */
    }

    .btn:hover .arrow-circle i {
        color: black; /* Arrow turns black on hover */
        transform: translateX(5px); /* Move the arrow to the right on hover */
       transition:  transform 2s  ease;
    }

